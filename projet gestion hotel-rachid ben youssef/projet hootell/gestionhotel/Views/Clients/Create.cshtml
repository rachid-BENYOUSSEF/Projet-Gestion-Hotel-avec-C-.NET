@model gestionhotel.Models.Client

@{
    ViewData["Title"] = "Créer un Client";
    var headerColor = "#4A57C6"; // Header color
    var buttonColor = "#7854B0"; // Button color
}

<h1 style="color:@headerColor; text-align:center; margin-bottom:20px;">Créer un Client</h1>

<div style="margin: 30px auto; max-width: 600px; padding: 20px; background-color:#f9f9f9; border-radius:8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <h4 style="color:@headerColor; text-align:center;">Informations sur le Client</h4>
    <hr />
    <form asp-action="Create" style="margin-top:20px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Adresse" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Adresse" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Adresse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Email" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FideliteId" class="control-label" style="font-weight:bold; color:#333;"></label>
            <select asp-for="FideliteId" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" asp-items="ViewBag.FideliteId"></select>
        </div>
        <div class="form-group">
            <label asp-for="Historique" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Historique" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Historique" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nom" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Nom" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NumeroTelephone" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="NumeroTelephone" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="NumeroTelephone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Preference" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Preference" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Preference" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Prenom" class="control-label" style="font-weight:bold; color:#333;"></label>
            <input asp-for="Prenom" class="form-control" style="border: 1px solid #ccc; border-radius:5px;" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        <div class="form-group" style="text-align:center; margin-top:20px;">
            <input type="submit" value="Créer" class="btn" style="background-color:@buttonColor; color:white; padding:10px 20px; border:none; border-radius:5px;" />
            <a asp-action="Index" class="btn" style="background-color:#ccc; color:black; padding:10px 20px; margin-left:10px; text-decoration:none; border-radius:5px;">Retour à la Liste</a>
        </div>
    </form>
</div>
