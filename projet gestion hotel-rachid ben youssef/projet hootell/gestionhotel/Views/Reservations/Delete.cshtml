@model gestionhotel.Models.Reservation

@{
    ViewData["Title"] = "Supprimer une Réservation";
    var headerColor = "#4A57C6"; // Theme header color
    var dangerButtonColor = "#dc3545"; // Delete button color
    var neutralButtonColor = "#6c757d"; // Neutral button color
}

<h1 style="color:@headerColor; text-align:center; margin-bottom:20px;">Supprimer une Réservation</h1>

<div style="margin: 30px auto; max-width: 700px; padding: 20px; background-color:#f9f9f9; border-radius:8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <h3 style="text-align:center; margin-bottom:20px; color:red;">Êtes-vous sûr de vouloir supprimer cette réservation ?</h3>
    <h4 style="color:@headerColor; text-align:center;">Détails de la Réservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.ServiceId)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ServiceId)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.DateDebut)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateDebut)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.DateFin)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateFin)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.DateReservation)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateReservation)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.StatutReservation)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.StatutReservation)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.TypeReservation)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.TypeReservation)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.Chambre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Chambre.ChambreId)
        </dd>
        <dt class="col-sm-4 fw-bold">
            @Html.DisplayNameFor(model => model.Salle)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Salle.SalleId)
        </dd>
    </dl>

    <form asp-action="Delete" style="margin-top:20px;">
        <input type="hidden" asp-for="ReservationId" />
        <div style="text-align:center;">
            <input type="submit" value="Supprimer" class="btn btn-danger" style="background-color:@dangerButtonColor; color:white; padding:10px 20px; border:none; border-radius:5px;" />
            <a asp-action="Index" class="btn btn-secondary" style="background-color:@neutralButtonColor; color:white; padding:10px 20px; text-decoration:none; border-radius:5px; margin-left:10px;">Retour à la Liste</a>
        </div>
    </form>
</div>
