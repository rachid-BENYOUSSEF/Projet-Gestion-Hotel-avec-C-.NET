@page
@model LoginModel

@{
    ViewData["Title"] = "";
    var headerColor = "#4A57C6"; // Couleur pour les en-têtes
    var buttonColor = "#7854B0"; // Couleur des boutons
}

<h1 style="color:@headerColor; text-align:center; margin-bottom:20px;">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <section style="padding:20px; border:1px solid #ddd; border-radius:10px; background-color:#f9f9f9;">
            <form id="account" method="post">
                <h2 style="color:@headerColor; text-align:center;">LOG IN</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn" style="background-color:@buttonColor; color:white; width:100%; padding:10px 0; border-radius:5px;">Log in</button>
                </div>
                <div style="margin-top:20px;">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color:@buttonColor; text-decoration:none;">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color:@buttonColor; text-decoration:none;">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6">
        <div style="display:flex; justify-content:center; align-items:center; height:100%; text-align:center;">
            <img src="~/images/hotellogo.png" alt="Hotel Logo" style="max-width:100%; height:auto; border-radius:15px; box-shadow:0px 4px 10px rgba(0,0,0,0.2);" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
